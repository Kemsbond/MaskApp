@using MemberRegistration.MvcWebUI.Models
@model MemberListModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <div>

        
        <table class="table table-dark text-center">
            <thead>
                <tr>
                    <th width="20%">T.C. Kimlik No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Yaş</th>
                    <th>Maske Durumu</th>
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Members)
                {
                    <tr>

                        <td>@item.TcNo</td>
                        <td>@item.FirstName.ToUpper()</td>
                        <td>@item.LastName.ToUpper()</td>
                        <td class="text-success">
                            @(((item.DateOfBirth.Year) - (DateTime.Now.Year)).ToString().Substring(1))
                        </td>
                        <td>
                            @if (item.IsMask == true)
                            {
                                <label class="text-success">Verildi</label>
                            }
                            else
                            {
                                <label class="text-danger">Verilmedi</label>
                            }

                        </td>
                        <td><a style="color:dodgerblue" href="/Member/MemberDetails/@item.Id">Maske İşlemleri</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
</html>
